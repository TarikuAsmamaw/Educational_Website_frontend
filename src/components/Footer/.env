# General Settings
PORT=3000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=yourpassword
DB_NAME=education_platform

# JWT Authentication
JWT_SECRET=yourjwtsecret
JWT_EXPIRATION=1d

# API Keys (for external integrations like payment gateways or third-party APIs)
PAYMENT_API_KEY=yourpaymentapikey
PAYMENT_API_SECRET=yourpaymentapisecret

# Email Service Configuration (e.g., for user notifications)
EMAIL_HOST=smtp.your-email-service.com
EMAIL_PORT=587
EMAIL_USER=youremail@example.com
EMAIL_PASSWORD=yourpassword
EMAIL_FROM="Education Platform <no-reply@yourdomain.com>"

# Cloud Storage (for uploading resources or media files)
CLOUD_STORAGE_API_KEY=yourcloudapikey
CLOUD_STORAGE_API_SECRET=yourcloudapisecret
CLOUD_STORAGE_BUCKET_NAME=your-bucket-name
CLOUD_STORAGE_REGION=your-region

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:3000

# Admin Credentials (optional, for seeding admin users)
ADMIN_EMAIL=admin@educationplatform.com
ADMIN_PASSWORD=youradminpassword
